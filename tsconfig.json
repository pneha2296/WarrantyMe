// tsconfig.json
{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "moduleResolution": "node",
      "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  